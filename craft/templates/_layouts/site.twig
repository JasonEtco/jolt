 # child templates to define the main contents for the page.
-#}

{% extends "_layouts/base" %}

{# ------------------------------------------------------------------ #}

{% block body %}

		<main class="content-wrapper" id="content-wrapper" role="main">

            {% include '_includes/global-header' %}
            {% include '_includes/global-nav' %}
			{% block content %}{% endblock %}

		</main>

{% endblock %}

{# ------------------------------------------------------------------ #}

{% block footer %}

	<footer class="footer">
		<section class="footer__sponsors">
			<h4 class="footer__title">{{ siteName }} Sponsors</h4>

			<ul class="footer__sponsor-list">

				{% for block in footer.sponsors %}
					<li>
						<a href="{{ block.linkToSponsor }}" target="_blank">{{ block.sponsorName }}</a>
					</li>
				{% endfor %}

			</ul>
		</section>

		<section class="footer__contact-info">
			<p>{{ contactInformation.address }}</p>
			<a href="mailto:{{ contactInformation.joltEmail }}" target="_blank">{{ contactInformation.joltEmail }}</a>
		</section>
	</footer>

{% endblock %}

{# ------------------------------------------------------------------ #}
