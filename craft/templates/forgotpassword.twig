{% extends "_layouts/base" %}
{% set title = "Reset Password" %}
{% set bodyClass = "body--blue" %}

{% block body %}
	<main class="login">
		<a href="{{ siteUrl }}" class="login__logo">
			{% include "_includes/jolt-logo.svg" %}
		</a>
		<div class="reset">
			<div class="login__reset">
				<h2 style="margin-top: 0;">Reset Password</h2>
				<form method="post" accept-charset="UTF-8">
					{{ getCsrfInput() }}
					<input type="hidden" name="action" value="users/forgotPassword">
					<input type="hidden" name="redirect" value="">

					<h3><label for="loginName">Email</label></h3>
					<input id="loginName" type="text" name="loginName"
							value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.session.rememberedUsername }}{% endif %}">

					{% if errors is defined %}
							<ul class="errors">
									{% for error in errors %}
											<li>{{ error }}</li>
									{% endfor %}
							</ul>
					{% endif %}

					<button class="btn" type="submit">Submit</button>
				</form>
			</div>
		</div>
	</main>
{% endblock %}