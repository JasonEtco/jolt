{% extends "_layouts/site" %}
{% set title = "Volumes" %}

{% block content %}
	<h1>Volumes</h1>

	{% for entry in craft.entries.section('volumes').find() %}
		<article>
			<h3><a href="{{ entry.url }}">{{ entry.title }}</a></h3>
			<p>Posted on {{ entry.postDate.format('F d, Y') }}</p>
		</article>
	{% endfor %}
{% endblock %}
