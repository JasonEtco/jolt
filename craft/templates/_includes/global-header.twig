<header class="header {% if headerClass is defined %}{{ headerClass }}{% endif %}">
	<div class="header__inner">

		<div class="header__links">
			<button class="nav-button" id="js--nav-button">
				<span></span>
			</button>

			<a href="{{ siteUrl }}" class="header__logo-link">{% include '_includes/jolt-logo.svg' %}</a>
		</div>

		<div class="header__extra">
			<form action="{{ url('search/results') }}" class="header__search">
				<input class="header__search__input" type="search" name="q" placeholder="Search">
				<button type="submit" name="search" class="header__search__button">Search</button>
			</form>

			{% if currentUser %}

				<p>Hello {{ currentUser.friendlyName }}!</p>
				<a href="{{ logoutPath }}" class="header__button">Logout</a>

			{% else %}

				<button class="header__button">Login</button>

			{% endif %}
		</div>

	</div>
</header>
